<div class="container">

    <div class="row">
        <div class="col-6">
            <h2 class="t1">EAT THESE BURGERS</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <p>
                    {{id}} - {{burger_name}}
                    <button data-id="{{this.id}}" id="devour">Devour It!</button>
                </p>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2 class="t1">YUMMM DELICIOUS</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <p>
                    {{id}} - {{burger_name}}
                    <button data-id="{{this.id}}" id="delete">Throw Away!</button>
                </p>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <form action="">
        <div class="form-group" id="formStyle">
            <textarea class="form-control" id="burgerForm" rows="2" style="width: 400px"></textarea>
            <button class="btn btn-primary" type="submit" id="submitBurger">Submit Burger!</button>
        </div>
    </form>
</div>